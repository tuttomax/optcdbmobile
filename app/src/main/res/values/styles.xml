<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="BaseAppTheme.NoActionBar" parent="BaseAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MainTheme" parent="BaseAppTheme.NoActionBar">

        <item name="android:dialogPreferenceStyle">@style/BaseAppTheme.Dialog</item>
        <item name="android:preferenceStyle">@style/BaseAppTheme.Preference</item>
    </style>

    <style name="BaseAppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColorHighlight">@color/secondaryLightColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="BaseAppTheme.Preference" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentListStyle">@style/BaseAppTheme.Preference.List</item>
    </style>

    <style name="BaseAppTheme.Preference.List" parent="@style/PreferenceFragmentList">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
</resources>
