<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="BaseAppTheme.NoActionBar" parent="BaseAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MainTheme" parent="BaseAppTheme.NoActionBar">
        <item name="dialogTheme">@style/BaseAppTheme.TaskDialog</item>

        <item name="actionBarStyle">@style/BaseAppTheme.Toolbar</item>
        <item name="buttonStyle">@style/BaseAppTheme.Button</item>
    </style>

    <style name="BaseAppTheme.Button">
        <item name="background">@color/secondaryLightColor</item>
        <item name="android:textColor">@color/secondaryLightTextColor</item>
    </style>

    <style name="BaseAppTheme.Toolbar" parent="BaseAppTheme">
        <item name="background">@color/secondaryLightColor</item>
        <item name="titleTextStyle">@style/BaseAppTheme.Toolbar.Title</item>
        <item name="actionMenuTextColor">@color/secondaryLightTextColor</item>
    </style>

    <style name="BaseAppTheme.Toolbar.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/secondaryLightTextColor</item>
    </style>

    <style name="BaseAppTheme.Dialog" parent="BaseAppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/rounded_background</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BaseAppTheme.TaskDialog" parent="BaseAppTheme.Dialog">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="BaseAppTheme.UnitDialog" parent="BaseAppTheme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="NavigationView" parent="MainTheme">
        <item name="android:listPreferredItemHeightSmall">90dp</item>
        <item name="listPreferredItemHeightSmall">90dp</item>
    </style>

</resources>
